<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <BaseOutputPath>bin\</BaseOutputPath>
    <SignAssembly>False</SignAssembly>
    <Configurations>DebugWindows;ReleaseWindows</Configurations>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\AssetRipperCommon\AssetRipperCommon.csproj" />
    <ProjectReference Include="..\AssetRipperCore\AssetRipperCore.csproj" />
    <ProjectReference Include="..\AssetRipperLibrary\AssetRipperLibrary.csproj" />
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
  </Target>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="mkdir $(SolutionDir)Bins\AssetRipperGUI\$(ConfigurationName)\Plugins&#xD;&#xA;copy $(TargetPath) $(SolutionDir)Bins\AssetRipperGUI\$(ConfigurationName)\Plugins\$(TargetFileName)" />
  </Target>

</Project>
